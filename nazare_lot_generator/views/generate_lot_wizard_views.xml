<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_generate_lot_wizard_form" model="ir.ui.view">
        <field name="name">generate.lot.wizard.form</field>
        <field name="model">generate.lot.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Custom Lot">
                <group>
                    <field name="product_id" readonly="1"/>
                    <field name="preview_lot_number" readonly="1"/>
                    <field name="quantity"/>
                </group>
                <footer>
                    <button name="action_generate_lot" string="Generate Lot" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
