<odoo>
    <template id="report_label_base_document">
        <div class="page">
            <div class="row no-gutters" style="border-left: 1px solid #000000;border-right: 1px solid #000000;">
                <div class="col-4 m-2">
                    <table width="100%" height="185px"  style="border: 1px solid #000000;margin-top: 12px;">
                        <tbody>
                            <tr>
                                <td height="15px" style="background: black;color: white;" align="center">Contenido:</td>
                            </tr>
                            <tr>
                                <td align="center" style="width:100px; word-wrap: break-word;" height="40px"><span align="center" class="medium" style="width:100px; word-wrap: break-word; font-size: 16px" t-field="doc.quantity"/></td>
                            </tr>
                            <tr>
                                <td height="15px" style="background: black;color: white;" align="center">Lote:</td>
                            </tr>
                            <tr>
                                <td height="15px" align="center"><span align="center" class="medium" style="width:100px; word-wrap: break-word; font-size: 16px" t-field="doc.lot_id."/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-6 m-2">
                    <table width="100%" style="border: 1px solid #000000;margin-top: 12px;">
                        <tbody>
                            <tr>
                                <td style="background: black;color: white;" align="center">DESCRIPCION/DESCRIPTION:</td>
                            </tr>
                            <tr>
                                <td height="110px">
                                    <strong>Producto: </strong>
                                    <span t-field="line.name"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <br/>
                    <t t-if="doc.name">
                        <strong>ORDEN DE COMPRA:</strong>
                        <span t-field="doc.name"/>
                    </t>
                    <br/>
                    <strong>FECHA PO:</strong>
                    <t t-if="doc.date_order">
                        <span t-esc="doc.date_order.strftime('%d/%m/%Y')"/>
                    </t>
                </div>
                <div class="col-1 ml-4">
                    <img src='/report_tags/static/src/img/orientacion.png' style="max-width: 30px;margin-top: 10px;margin-right:50px;"/>
                </div>
            </div>
            <div class="row no-gutters" style="border-left: 1px solid #000000;border-right: 1px solid #000000;">
                <div class="col-11">
                    <img t-if="line.product_id.default_code" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', line.product_id.default_code, 600, 120)" style="max-height:35pt;max-width:100%;" align="center"/>
                </div>
            </div>
            <div class="row no-gutters text-right" style="border: 1px solid #000000; border-radius:0px 0px 16px 16px;height: 25px;">
                <div class="col-12">
                </div>
            </div>
            <div class="row no-gutters mt-1" style="page-break-after:always;">
                <div class="col-3">
                </div>
                <div class="col-6 text-center">
                    <sub>HANDLE WITH CARE</sub>
                </div>
                <div class="col-2 text-right" style="font-size: 8px;">
                    <sub><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d %B %Y')"/></sub>
                </div>
            </div>
        </div>
    </template>

    <template id="report_label_master_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <!-- Content from the first uploaded image for Master Box label -->
                    <img t-att-src="'/product_label_wizard/static/src/img/caja_master.webp'"/>
                    <!-- Add additional fields as needed -->
                </div>
            </t>
        </t>
    </template>

    <template id="report_label_granel_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <!-- Content from the second uploaded image for A granel label -->
                    <img t-att-src="'/product_label_wizard/static/src/img/caja_granel.webp'"/>
                    <!-- Add additional fields as needed -->
                </div>
            </t>
        </t>
    </template>

    <template id="report_label_base">
        <t t-call="web.html_container">
            <t t-call="nazare_qweb_labels.report_tag_layout_empty">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="nazare_qweb_labels.report_label_base_document"/>
                </t>
            </t>
        </t>
    </template>
</odoo>
